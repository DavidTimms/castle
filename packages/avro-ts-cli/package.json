{
  "name": "@ovotech/avro-ts-cli",
  "description": "A cli to convert avro schemas into typescript interfaces",
  "version": "2.0.1",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "author": "Ivan Kerin <ikerin@gmail.com>",
  "license": "Apache-2.0",
  "bin": {
    "avro-ts": "./dist/avro-ts.js"
  },
  "scripts": {
    "avro-ts": "node -r ts-node/register src/avro-ts.ts",
    "build": "tsc --declaration",
    "build:docs": "build-docs README.md",
    "test": "jest test --runInBand",
    "lint:prettier": "prettier --list-different {src,test}/**/*.ts",
    "lint:eslint": "eslint '{src,test}/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:eslint"
  },
  "jest": {
    "preset": "../../jest.json"
  },
  "dependencies": {
    "@ovotech/avro-ts": "^4.0.0",
    "commander": "^4.0.1",
    "chalk": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@types/node": "^13.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "ansi-regex": "^5.0.0"
  }
}
